@model List<DataLayer.Model.Croisieres>

<div class="body-content">
    <div class="row">
        <div class="text-center">
            <div id="DivClignotante" style="visibility:visible;">
                <h1>Top promo!</h1>
            </div>
            <ul>
                @foreach (var item in @Model)
                {
                    <li class="center-block">
                        <div class="item">
                            @if (@item.Photos.Count() != 0)
                            {
                                <img src="~/Uploads/Bateaux/@item.Photos.FirstOrDefault().PhotoName" alt="Alternate Text" class="img-caroussel" />
                            }
                        </div>

                        <span>@item.Ports.Nom</span>

                    </li>
                    <li class="center-block">
                        <span>- @item.Promos.Reduction %</span>
                    </li>
                    <li class="center-block">@Html.ActionLink("Voir...", "Details", new { id = @item.IdCroisiere, controller = "Destinations" })</li>
                    <text>...........</text>
                }

            </ul>
        </div>
    </div>

</div>
<script type="text/javascript">
    var clignotement = function () {
        if (document.getElementById('DivClignotante').style.visibility == 'visible') {
            document.getElementById('DivClignotante').style.visibility = 'hidden';
        }
        else {
            document.getElementById('DivClignotante').style.visibility = 'visible';
        }
    };

    // mise en place de l appel de la fonction toutes les secondes
    // Pour arrêter le clignotement : clearInterval(periode);
    periode = setInterval(clignotement, 1000);
</script>
