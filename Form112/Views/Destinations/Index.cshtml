@model List<DataLayer.Model.Croisieres>

@{
    ViewBag.Title = "Toutes nos croisières";
}

@section scripts{
    <script src="~/Scripts/Destinations/IndexScript.js"></script>
}

@section SearchForm{
    @Html.Action("Index", "Search")
}


<div class="row">
    Destinations
</div>
<hr />

    <div class="row">
        @foreach (var croisiere in Model)
        {
            @Html.Action("AllCroisieres", "Destinations", new { id = croisiere.IdCroisiere })
        }
    </div>

    @using (@Html.BeginForm("Details", "Destinations", FormMethod.Post, new { id = "idFormDestination" }))
    {
        <input type="hidden" id="idCroisiereChoice" name="DestinationChoice" />
    }

