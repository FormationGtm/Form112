@model Form112.Areas.Admin.Models.UserRolesViewModel
@{
    ViewBag.Title = "Attribution des rôles";
}

<h2>AttributeRole</h2>
@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

@using (Html.BeginForm("AttributeRole", "UserRoles", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Utilisateur</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                <input type="hidden" value="@Model.IdUser" name="IdUser" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ListRoles, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @foreach (var r in Model.ListRoles)
                {
                    <input type="checkbox" value="@r.ItemId" name="SelectedRoles" />@r.ItemLabel
                }
            </div>
        </div>
    </div>

    <input type="submit" value="Sauvegarder" class="btn btn-default" />
}